# Include the license file
include LICENSE

# Include documentation files
include README.md
include CHANGELOG.md
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md

# Include requirements files
include requirements.txt
include requirements-dev.txt

# Include package data
include pyproject.toml
include setup.cfg
include setup.py

# Include configuration files
include .gitignore
include .pre-commit-config.yaml
include .readthedocs.yml
include codecov.yml

# Include all Python source files
recursive-include src *.py
recursive-include src *.pyi

# Include package data
recursive-include src/qubee_nlp/corpus *.txt
recursive-include src/qubee_nlp/corpus *.json
recursive-include src/qubee_nlp/data *.json
recursive-include src/qubee_nlp/data *.txt

# Include examples
recursive-include examples *.py

# Include tests
recursive-include tests *.py

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.yml
recursive-include docs *.yaml

# Include GitHub workflows
recursive-include .github/workflows *.yml
recursive-include .github/workflows *.yaml

# Exclude development and build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude .DS_Store
global-exclude .git
global-exclude .gitignore
global-exclude .hg
global-exclude .svn
global-exclude .tox
global-exclude .coverage
global-exclude .cache
global-exclude *.egg-info
global-exclude *.so
global-exclude *.dll
global-exclude *.pyd
global-exclude dist/
global-exclude build/
global-exclude .mypy_cache/
global-exclude .pytest_cache/
global-exclude htmlcov/
global-exclude .ipynb_checkpoints/
global-exclude .venv/
global-exclude venv/
global-exclude env/
global-exclude *.log
global-exclude *.tmp
global-exclude *.temp